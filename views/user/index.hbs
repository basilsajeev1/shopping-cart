<section>
    <div class="container">
        <div class="row mt-5">
            {{#each products}}
            <div class="col-md-3 m-2">
                
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="/images/productImages/{{this._id}}.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.category}}</p>
                        <p class="card-text">Rs.{{this.price}}</p>
                        
                        <button class="btn btn-primary" onclick="addItemToCart('{{this._id}}')">Add to cart</button>
                    </div>
                </div>
            
            </div>
            {{/each}}
        </div>
    </div>

</section>