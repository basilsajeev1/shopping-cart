
<div class="container">
    <div class="row ">
        <a href="/admin/add-products" >
            <button type="button" class="btn btn-success float-end">Add Products</button>
            </a>
    </div>
    <div class="row">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td><img style="width:50px ; height:50px ;" src="/images/productImages/{{this._id}}.jpg"></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure want to delete {{this.name}}?')">Delete</a>
      </td>
    </tr>

    {{/each}}
   
    
  </tbody>
</table>
</div>
</div>